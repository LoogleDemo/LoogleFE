{
	"trailingComma": "es5",

	"singleQuote": true,
	"jsxSingleQuote": true,

	"semi": false,

	"bracketSameLine": true,
	"bracketSpacing": true,

	"printWidth": 120,

	"tabWidth": 2,
	"useTabs": true,

	"quoteProps": "as-needed",

	"arrowParens": "always",
	"endOfLine": "auto",

	"requirePragma": false,
	"insertPragma": false,

	"proseWrap": "preserve",

	"overrides": [
		{
			"files": "*.json",
			"options": {
				"printWidth": 200
			}
		}
	]
}
